<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>LiveRouteTracker</portlet-name>
		<display-name>LiveRouteTracker</display-name>
		<portlet-class>es.eina.tfg.liveRouteTracker.portlet.PortletController</portlet-class>

		<init-param>
			<name>view-template</name>
			<value>/view.jsp</value>
		</init-param>

		<!-- Prevent Default Success Messages in JSP after action perform -->
		<init-param>
			<name>add-process-action-success-action</name>
			<value>false</value>
		</init-param>

		<!-- copy all action parameters directly as render parameters -->
		<init-param>
			<name>copy-request-parameters</name>
			<value>true</value>
		</init-param>

		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>

		<!-- Added custom language keys support -->
		<resource-bundle>Language</resource-bundle>

		<portlet-info>
			<title>LiveRouteTracker</title>
			<short-title>LiveRouteTracker</short-title>
			<keywords>LiveRouteTracker</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>